{
  "name": "@jwplayer/npm-run-ws",
  "version": "0.1.1",
  "description": "Run npm workspace scripts with extra features like serial, parallel, and root project runs.",
  "main": "src/run.js",
  "bin": {
    "npm-run-ws": "src/cli.js"
  },
  "keywords": [
    "npm",
    "workspace",
    "workspaces",
    "parallel",
    "root"
  ],
  "author": "bcasey@jwplayer.com",
  "license": "MIT",
  "dependencies": {
    "execa": "^5.1.1",
    "is-ci": "^3.0.1",
    "listr2": "^4.0.1",
    "npm-cli-version": "1.0.0",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "ava": "^3.15.0",
    "conventional-changelog-cli": "^2.1.1",
    "conventional-changelog-videojs": "^3.0.2",
    "doctoc": "^2.1.0",
    "husky": "^4.3.8",
    "lint-staged": "^12.1.2",
    "not-prerelease": "^1.0.1",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "uuid": "8.3.2",
    "videojs-standard": "^9.0.1"
  },
  "scripts": {
    "lint": "vjsstandard",
    "test": "npm-run-all -p -c lint test:*",
    "test:unit": "nyc --reporter=json --reporter=text ava --timeout 1m './test/*.test.js'",
    "preversion": "npm test",
    "version": "is-prerelease || npm run update-changelog && git add CHANGELOG.md",
    "update-changelog": "conventional-changelog -p videojs -i CHANGELOG.md -s"
  },
  "engines": {
    "npm": ">=7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "vjsstandard --fix",
    "README.md": "doctoc --no-title"
  }
}
